import SocialList from "@/components/SocialList";
import { MY_SKILL, PROJECTS } from "@/data/constants";
// import { sortMDByDate } from "@/utils";
import { t, changeLanguage } from "i18next";

changeLanguage("cs");
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<p class="text-base" set:html={t("about-me")} />
		<div class="mt-4">
			<SocialList />
		</div>
	</section>
	<section class="mt-6">
		<h2 class="title mb-4 text-xl">{t("technologie")}</h2>
		{
			MY_SKILL.map((skill) => (
				<div class="mr-2 mb-2 inline-block bg-textColor px-4 py-2 text-base font-semibold text-bgColor">
					{skill.title}
				</div>
			))
		}
