	<section class="mt-6">
		<h2 class="title mb-1 text-xl">{t("projects")}</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				PROJECTS.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
							{t(title)}:
						</a>
						<p class="inline-block sm:mt-2">{t(desc)}</p>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
